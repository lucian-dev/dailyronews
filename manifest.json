{
  "manifest_version": 3,
  "name": "DailyRoNews",
  "description": "Get the latest Romanian news right in your browser.",
  "version": "1.1",
  "permissions": ["notifications", "storage", "alarms", "background"],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "options_page": "src/options/options.html"
}
